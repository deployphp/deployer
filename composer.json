{
    "name": "luciano-jr/deployer",
    "description": "Deployment Tool",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Medvedev",
            "email": "anton@elfet.ru"
        },
        {
            "name": "Luciano Junior",
            "email": "luciano@lucianojr.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "Deployer\\": "src/"
        }
    },
    "bin": [
        "bin/dep"
    ],
    "require": {
        "php": ">=5.4.0",

        "elfet/pure": "~1.1",
        "symfony/finder": "~2.6",
        "symfony/console": "~2.6",
        "symfony/process": "~2.6",
        "kherge/amend": "~3.0",
        "phpseclib/phpseclib": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "herzult/php-ssh": "~1.0"
    },
    "suggest": {
        "herzult/php-ssh": "For SSH support through native SSH2 extension",
        "ext-sockets": "For parallel deployment"
    },
    "provide": {
        "ext-ssh2": "*"
    }
}
