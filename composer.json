{
    "name": "deployer/deployer",
    "description": "Deployment Tool",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Medvedev",
            "email": "anton@elfet.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Deployer\\": "src/"
        }
    },
    "bin": [
        "bin/dep"
    ],
    "require": {
        "php": ">=5.4.0",

        "symfony/finder": "~2.6",
        "symfony/console": "~2.6",
        "symfony/process": "~2.6",
        "herzult/php-ssh": "~1.0",
        "elfet/pure": "~1.1",
        "phpseclib/phpseclib": "2.0.*@dev",
        "kherge/amend": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "mikey179/vfsStream": "~1"
    },
    "suggest": {
        "ext-ssh2": "For better SSH implementation",
        "ext-sockets": "For parallel deployment"
    },
    "provide": {
        "ext-ssh2": "*"
    }
}
